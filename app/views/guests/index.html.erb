<% provide(:title, "Guest List") %>

<div class="tables col-md-10 col-md-offset-1">
	<div class="table-list">
		<h1>Guest List, <%= @guests.count.to_s + '/' + ticket_count.to_s %></h1>
		<table class="table table-hover table-responsive">
			<thead>
				<th>ID</th>
				<th>Name</th>
				<th>Table</th>
				<th>Ticket #</th>
				<th>Dietary Restrictions</th>
				<th></th>
			</thead>
			<tbody>
				<% @guests.each do |g| %>
				<tr>
					<td><%= g.id %></td>
					<td><%= g.first_name + ' ' + g.last_name %></td>
					<td><%= g.table_id %></td>
					<td><%= g.ticket %></td>
					<td><%= g.restrictions %></td>
					<td><%= link_to 'Edit', edit_guest_path(g), :class => 'btn btn-default' %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>